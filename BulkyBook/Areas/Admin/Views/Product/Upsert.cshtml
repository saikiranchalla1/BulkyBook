@model BulkyBook.Models.ViewModels.ProductVM


<form method="post" asp-action="Upsert ">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edi Category</h2>
        </div>
        <div asp-validation-summary="All"/>
        <div class="mb-3">
            <label asp-for="Product.Title"></label>
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger " />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Description"></label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger " />
        </div>

        <div class="mb-3">
            <label asp-for="Product.ISBN"></label>
            <input asp-for="Product.ISBN" class="form-control" />
            <span asp-validation-for="Product.ISBN" class="text-danger " />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Author"></label>
            <input asp-for="Product.Author" class="form-control" />
            <span asp-validation-for="Product.Author" class="text-danger " />
        </div>

        <div class="mb-3">
            <label asp-for="Product.ListPrice"></label>
            <input asp-for="Product.ListPrice" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="text-danger " />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger " />
        </div> 

        <div class="mb-3">
            <label asp-for="Product.Price50"></label>
            <input asp-for="Product.Price50" class="form-control" />
            <span asp-validation-for="Product.Price50" class="text-danger " />
        </div> 

        <div class="mb-3">
            <label asp-for="Product.Price100"></label>
            <input asp-for="Product.Price100" class="form-control" />
            <span asp-validation-for="Product.Price100" class="text-danger " />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Category"></label>
            <select asp-for="Product.Category" class="form-control" asp-items="ViewBag.CategoryList">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Product.Category" class="text-danger " />
        </div>

        <div class="mb-3">
            <label asp-for="Product.CoverType"></label>
            <select asp-for="Product.CoverType" class="form-control" asp-items="@ViewData["CoverTypeList"] as IEnumerable<SelectListItem>">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Product.Category" class="text-danger " />
        </div>

        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
            Back to list
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}